<?xml version="1.0" encoding="utf-8"?>
<com.baoyz.widget.PullRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pullRefreshLayout_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:refreshType="water_drop">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/question_layout_first"
                layout="@layout/question_layout_first"/>

            <include
                android:id="@+id/question_layout_second"
                layout="@layout/question_layout_second"/>

            <include
                android:id="@+id/question_layout_third"
                layout="@layout/question_layout_third"/>

            <include
                android:id="@+id/question_layout_third"
                layout="@layout/question_layout_third"/>

            <include
                android:id="@+id/question_layout_third"
                layout="@layout/question_layout_third"/>

            <include
                android:id="@+id/question_layout_third"
                layout="@layout/question_layout_third"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="问答已经被看光啦，（害羞，，，）！下次再来吧！"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

</com.baoyz.widget.PullRefreshLayout>