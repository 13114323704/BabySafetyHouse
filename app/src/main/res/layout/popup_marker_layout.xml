<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_login_bg">

    <TextView
        android:id="@+id/text_marker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:text="信息加载中..."
        android:padding="8dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image_marker_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@mipmap/close" />

    <ImageView
        android:id="@+id/image_marker_info"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text_marker_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@mipmap/evaluate" />


    <TextView
        android:id="@+id/text_marker_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_marker_distance"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="详细信息加载中..."
        android:gravity="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_marker_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离信息加载中..."
        android:textSize="15sp"
        android:layout_below="@+id/image_marker_info"
        android:layout_centerHorizontal="true" />


</RelativeLayout>