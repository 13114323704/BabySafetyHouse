<?xml version="1.0" encoding="utf-8"?>
<com.baoyz.widget.PullRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pullRefreshLayout_collect_commodity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:refreshType="water_drop">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include
                android:id="@+id/collect_commodity_layout_first"
                layout="@layout/commodity_layout_first" />

            <include
                android:id="@+id/collect_commodity_layout_second"
                layout="@layout/commodity_layout_third" />


        </LinearLayout>

    </ScrollView>

</com.baoyz.widget.PullRefreshLayout>